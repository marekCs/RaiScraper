{
  "exclude": [
    "**/bin",
    "**/bower_components",
    "**/jspm_packages",
    "**/node_modules",
    "**/obj",
    "**/platforms"
  ],
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "D:\\Marek_Dev\\RaiMp3Scraper\\Logs\\log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": {
      "FromLogContext": true
    }
  },
  "AppSettings": {
    "UrlAddressesToParse": [
      "/sitemap.abruzzo.xml",
      "/sitemap.campania.xml",
      "/sitemap.emiliaromagna.xml",
      "/sitemap.lazio.xml",
      "/sitemap.marche.xml",
      "/sitemap.sardegna.xml",
      "/sitemap.umbria.xml"
    ],
    "OutputFolderPath": "X:\\RaiNews.It",
    "FFmpegPath": "C:\\Program Files\\Ffmpeg\\bin\\ffmpeg.exe",
    "UrlBase": "https://www.rainews.it",
    "DateFrom": "2023-04-01",
    "DateTo": "2023-04-30",
    "DownloadInfoPath": "D:\\Marek_Dev\\RaiMp3Scraper\\DownloadedUrls.txt",
    "ParsingHours": [ 100 ], // hours to run parsing,
    "MaxConcurrentDownloads": 2
  }
}
